{
    "name": "webmasters/doctrine-skeleton",
    "description": "A sample application skeleton using Doctrine 2",
    "license": "MIT",
    "type": "project",
    "autoload": {
        "psr-0": {
            "Controllers": "./src/",
            "Entities": "./src/",
            "Repositories": "./src/"
        },
        "psr-4": {
            "Installers\\": "./src/Installers/"
        }
    },
    "require": {
        "php": ">=5.3.2",
        "doctrine/orm": "2.4.4"
    },
    "scripts": {
        "post-create-project-cmd": [
            "Installers\\ProjectInstaller::postCreate"
        ]
    }
}
